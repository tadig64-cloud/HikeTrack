<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ===== Permissions réseau / localisation ===== -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- ===== Bluetooth (legacy + Android 12+) ===== -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE"/>

    <!-- Android 13+ (API 33) -->
    <uses-permission
        android:name="android.permission.NEARBY_WIFI_DEVICES"
        tools:targetApi="33"/>
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33"/>

    <!-- Services en avant-plan -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION"/>
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"
        tools:targetApi="34" />

    <!-- Divers -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>

    <!-- Optionnel : localisation en arrière-plan (Android 10+) -->
    <uses-permission
        android:name="android.permission.ACCESS_BACKGROUND_LOCATION"
        tools:targetApi="29"/>

    <!-- Features -->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="false"/>
    <uses-feature android:name="android.hardware.location.gps" android:required="false"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:enableOnBackInvokedCallback="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HikeTrack" android:localeConfig="@xml/locales_config">

        <!-- Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Écrans principaux -->
        <activity
            android:name=".MapActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>

        <activity
            android:name=".TrackDetailsActivity"
            android:exported="false"
            android:label="@string/track_detail_title"
            android:parentActivityName=".MapActivity" />

        <activity
            android:name=".settings.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".GearChecklistActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".checklist.ChecklistActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".info.InfoHubActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".safety.SafetyActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".safety.FirstAidActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".safety.RespectNatureActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".nature.NatureImportActivity"
            android:exported="false" />

        <activity
            android:name=".backtostart.BackToStartActivity"
            android:exported="false"
            android:label="@string/back_to_start_title"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".sos.SosActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.hikemvp.aide.AidePreventionActivity"
            android:exported="false"
            android:label="@string/aide_prevention_title" />

        <activity
            android:name=".water.WaterPointsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".files.SavedTracksActivity"
            android:exported="false"
            android:label="@string/saved_tracks_title"
            android:screenOrientation="portrait"/>

        <!-- Replay -->
        <activity
            android:name=".ReplayActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".group.GroupActivity"
            android:exported="false"
            android:label="@string/group_title" />

        <activity
            android:name="com.hikemvp.profile.ProfileActivity"
            android:exported="false"
            android:label="@string/profile_title"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name="com.hikemvp.profile.ProfileHistoryActivity"
            android:exported="false"
            android:label="@string/profile_history_title"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name="com.hikemvp.profile.ProfileSettingsActivity"
            android:exported="false"
            android:label="@string/profile_settings_title"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name="com.hikemvp.history.TrackDetailActivity"
            android:exported="false"
            android:label="@string/history_detail_title"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".about.AboutActivity"
            android:exported="false"
            android:label="@string/menu_about" />

        <activity
            android:name=".group.DeepLinkActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter android:autoVerify="false">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:scheme="hiketrack"
                    android:host="group"
                    android:pathPrefix="/join" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:scheme="https"
                    android:host="hiketrack.app"
                    android:pathPrefix="/join"/>
                <data
                    android:scheme="http"
                    android:host="hiketrack.app"
                    android:pathPrefix="/join"/>
            </intent-filter>
        </activity>



        <!-- Service d'enregistrement en Foreground -->
        <service
            android:name=".TrackRecordingService"
            android:exported="false"
            android:foregroundServiceType="location"/>

        <service
            android:name=".group.GroupService"
            android:foregroundServiceType="location|dataSync"
            android:exported="false" />

        <service
            android:name=".group.ble.GroupBleService"
            android:exported="false"
            android:foregroundServiceType="location|dataSync"/>

        <service
            android:name=".group.GroupLocationService"
            android:exported="false"
            android:foregroundServiceType="location" />

        <service
            android:name=".group.GroupNearbyService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- FileProvider (unique) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

    </application>
</manifest>
