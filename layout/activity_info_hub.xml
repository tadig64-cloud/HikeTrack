<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_infohub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/info_hub_title"
        app:navigationIcon="@drawable/abc_ic_ab_back_material" />

    <ScrollView
        android:id="@+id/scroll_infohub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ====== BALISAGE & SIGLES ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/header_markings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ih_section_markings"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/chevron_markings"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:rotation="0"
                            android:contentDescription="@string/ih_expand"
                            app:srcCompat="@drawable/ic_chevron_right"
                            android:tint="@color/md_on_surface" />

                        <TextView
                            android:id="@+id/toggle_markings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/ih_expand" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/body_markings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="12dp"
                        android:text="@string/ih_markings_body" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== METEO & ORAGES (général) ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/header_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ih_section_weather"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/chevron_weather"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:rotation="0"
                            android:contentDescription="@string/ih_expand"
                            app:srcCompat="@drawable/ic_chevron_right"
                            android:tint="@color/md_on_surface" />

                        <TextView
                            android:id="@+id/toggle_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/ih_expand" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/body_weather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="12dp"
                        android:text="@string/ih_weather_body" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== ORAGES : AVANT / PENDANT / APRES ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/header_storms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ht_safety_storm_title"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/chevron_storms"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:rotation="0"
                            android:contentDescription="@string/ih_expand"
                            app:srcCompat="@drawable/ic_chevron_right"
                            android:tint="@color/md_on_surface" />

                        <TextView
                            android:id="@+id/toggle_storms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/ih_expand" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/body_storms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="12dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== ORIENTATION & PROGRESSION ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/header_orient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ih_section_orientation"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/chevron_orient"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:rotation="0"
                            android:contentDescription="@string/ih_expand"
                            app:srcCompat="@drawable/ic_chevron_right"
                            android:tint="@color/md_on_surface" />

                        <TextView
                            android:id="@+id/toggle_orient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/ih_expand" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/body_orient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="12dp"
                        android:text="@string/ih_orient_body" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== RESPECT DE LA NATURE ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/header_respect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ih_section_respect"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/chevron_respect"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:rotation="0"
                            android:contentDescription="@string/ih_expand"
                            app:srcCompat="@drawable/ic_chevron_right"
                            android:tint="@color/md_on_surface" />

                        <TextView
                            android:id="@+id/toggle_respect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/ih_expand" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/body_respect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="12dp"
                        android:text="@string/ih_respect_body" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_open_respect"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/info_hub_respect_title" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== PREMIERS SECOURS & SOS ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/header_firstaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ih_section_firstaid"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/chevron_firstaid"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:rotation="0"
                            android:contentDescription="@string/ih_expand"
                            app:srcCompat="@drawable/ic_chevron_right"
                            android:tint="@color/md_on_surface" />

                        <TextView
                            android:id="@+id/toggle_firstaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/ih_expand" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/body_firstaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="12dp"
                        android:text="@string/ih_firstaid_body" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_open_firstaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_hub_firstaid_title" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_open_sos"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/info_hub_open_sos" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== CHALEUR / CANICULE ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/header_heat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ht_safety_heat_title"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/chevron_heat"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:rotation="0"
                            android:contentDescription="@string/ih_expand"
                            app:srcCompat="@drawable/ic_chevron_right"
                            android:tint="@color/md_on_surface" />

                        <TextView
                            android:id="@+id/toggle_heat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/ih_expand" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/body_heat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="12dp"
                        android:text="@string/ht_safety_heat_body" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== FROID / HYPOTHERMIE ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/header_cold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ht_safety_cold_title"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/chevron_cold"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:rotation="0"
                            android:contentDescription="@string/ih_expand"
                            app:srcCompat="@drawable/ic_chevron_right"
                            android:tint="@color/md_on_surface" />

                        <TextView
                            android:id="@+id/toggle_cold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/ih_expand" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/body_cold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="12dp"
                        android:text="@string/ht_safety_cold_body" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== BROUILLARD / ÉGAREMENT ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/header_nav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ht_safety_nav_title"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/chevron_nav"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:rotation="0"
                            android:contentDescription="@string/ih_expand"
                            app:srcCompat="@drawable/ic_chevron_right"
                            android:tint="@color/md_on_surface" />

                        <TextView
                            android:id="@+id/toggle_nav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/ih_expand" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/body_nav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="12dp"
                        android:text="@string/ht_safety_nav_body" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== ANIMAUX / TROUPEAUX ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/header_animals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ht_safety_animals_title"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/chevron_animals"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:rotation="0"
                            android:contentDescription="@string/ih_expand"
                            app:srcCompat="@drawable/ic_chevron_right"
                            android:tint="@color/md_on_surface" />

                        <TextView
                            android:id="@+id/toggle_animals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="@string/ih_expand" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/body_animals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="12dp"
                        android:text="@string/ht_safety_animals_body" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
